<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="sample.controller.LoginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" />
                  <TextField fx:id="EmailTextField"/>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password"  />
                  <TextField fx:id="PasswordTextField" />
                  <CheckBox mnemonicParsing="false" text="Remember Me" fx:id="RememberMeCheckBox"/>
                  <Button mnemonicParsing="false" text="Login" fx:id="LoginButton"/>
                  <Button mnemonicParsing="false" text="Register" fx:id="RegisterButton"/>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </VBox>
         </center>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </BorderPane>
   </children>
</GridPane>
